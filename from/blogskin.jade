extends ./common/layout.jade

block vars
  - var nowMenu = "blog";
block title
  title [##_title_##] :: [##_page_title_##]
block belowMenu
  .search
    s_search
      input(type="text", name="[##_search_name_##]", value="[##_search_text_##]", onkeypress="if (event.keyCode === 13) { [##_search_onclick_submit_##] }", class="submit")
      input(value="검색" type="button" onclick="[##_search_onclick_submit_##]" class="submit")
  nav.blogNav [##_blog_menu_##]
block content
  s_list
    section
      h2 검색어 '[##_list_conform_##]'로 [##_list_count_##]개의 글을 찾았습니다.
      ol
        s_list_rep
          li
            span.date [##_list_rep_regdate_##]&nbsp;
            a(href="[##_list_rep_link_##]") [##_list_rep_title_##]&nbsp;
            span.count [##_list_rep_rp_cnt_##]
  s_rplist
    section
      h2 검색어 '[##_rplist_conform_##]'로 [##_rplist_count_##]개의 댓글을 찾았습니다.
      ol
        s_rplist_rep
          li
            span.date [##_rplist_rep_regdate_##]&nbsp;
            a(href="[##_rplist_rep_link_##]") [##_rplist_rep_title_##]&nbsp;
            span.count [##_rplist_rep_rp_cnt_##]&nbsp;
            span.name [##_rplist_rep_name_##]
  s_article_rep
    section
      h2: a(href="[##_article_rep_link_##]") [##_article_rep_title_##]
      .trailer
        span.date [##_article_rep_date_##]
        a.category(href="[##_article_rep_category_link_##]") [##_article_rep_category_##]
      article [##_article_rep_desc_##]
block footer
  div blog is powered by <a href="http://www.tistory.com/">Tistory</a>.
